<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <gradient
                android:angle="45"
                android:endColor="@color/dark_green"
                android:centerColor="@color/teal_700"
                android:startColor="@color/cal_date"
                android:type="linear" />
            <stroke
                android:width="1px"
                android:color="@color/cal_date" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/cal_date" />
            <stroke
                android:width="1px"
                android:color="#ad60e1" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>